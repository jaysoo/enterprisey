{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@enterprisey/challenges-data": ["libs/challenges-data/src/index.ts"],
      "@enterprisey/challenges-state": ["libs/challenges-state/src/index.ts"],
      "@enterprisey/flashcards-data": ["libs/flashcards-data/src/index.ts"],
      "@enterprisey/flashcards-state": ["libs/flashcards-state/src/index.ts"],
      "@enterprisey/notes-data": ["libs/notes-data/src/index.ts"],
      "@enterprisey/notes-state": ["libs/notes-state/src/index.ts"],
      "@enterprisey/users-data": ["libs/users-data/src/index.ts"],
      "@enterprisey/users-state": ["libs/users-state/src/index.ts"],
      "challenges/Routes": [
        "apps/challenges/src/app/remote-entry/entry.routes.ts"
      ],
      "flashcards/Routes": [
        "apps/flashcards/src/app/remote-entry/entry.routes.ts"
      ],
      "notes/Routes": ["apps/notes/src/app/remote-entry/entry.routes.ts"],
      "users/Routes": ["apps/users/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
